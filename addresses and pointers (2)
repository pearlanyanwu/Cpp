#include <iostream>
using namespace std;

int main()
{
 int i[4] = {3, 10, 6, 1};
 int *iPtr = i;
 cout << *iPtr << endl;
 
// Checking validity (for Q2)
 if (*(iPtr+1) == iPtr[1]) {
    cout << "True." << endl;
 }
 else {
  cout << "False." << endl;
 }
}

// Question 1: What would cout << *iPtr print out?
// Answer: The value of the first element of array i (3).

// Question 2: True/False: *(iPtr+1) is equivalent to iPtr[1]
// True.

#include <iostream>
using namespace std;

// Write a statement which will assign the address of i to iPtr.

int main()
{
    int i = 3;          // initialize variabke 'i'
    int *iPtr = NULL;   // initialize pointer of variable 'i'
    iPtr = &i;          // assign the address of variable 'i' to the pointer
    cout << iPtr;       // display the address of variable 'i' to the console
}
